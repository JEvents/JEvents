<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.8" client="site" method="upgrade">
    <name>JEvents Detail Module</name>
    <author>GWE Systems Ltd</author>
    <copyright>(C) 2009-2013 GWE Systems Ltd, 2006-2008 JEvents Project Group</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail></authorEmail>
    <authorUrl>http://www.jevents.net</authorUrl>
    <version>3.1.8</version>
    <description>Displays data from the event detail layout</description>
    <files>
        <filename>mod_jevents_detail.xml</filename>
        <filename module="mod_jevents_detail">mod_jevents_detail.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_jevents_detail.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic"  addfieldpath="/administrator/components/com_jevents/fields/">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
